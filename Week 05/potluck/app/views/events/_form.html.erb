<%= form_for @event do |f| %>
  <div class="form">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="form">
    <%= f.label :date %>
    <%= f.text_field :date %>
  </div>
  <div class="form">
    <%= f.label :start_time %>
    <%= f.text_field :start_time %>
  </div>
  <div class="form">
    <%= f.label :end_time %>
    <%= f.text_field :end_time %>
  </div>
  <div class="form">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>
  <div class="form">
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>
  <div class="form_button">
    <%= f.submit %>
  </div>
<% end %>
