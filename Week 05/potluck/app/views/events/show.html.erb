<h1><%= @event.name %></h1>
<br />

  <h3>Event location: <%= @event.address %></h3>
  <h3>Start time: <%= @event.start_time %></h3>
  <h3>End time: <%= @event.end_time %></h3>
  <h3>Contact name: <%=@event.user.name %></h3>
  <h3>Contact phone: <%= @event.phone %></h3>

<h1>Dishes for this event</h1>
<% if @dishes %>
  <% @dishes.each do |dish| %>
    <li>
      <ul><a href="<%=dish_path(dish.id)%>"><%= dish.name %></a></ul>
      <ul><h5><%=dish.user.name%> is bringing this dish</h5></ul>
    </li>
    <% end %>

<a href="<%=new_dish_path%>">Add a dish for this event</a>
<br />
<%= link_to "Edit Event Information", edit_event_path(@event.id) %>
<br />
<%= link_to "Delete Event", event_path(@event.id), method: :delete, data: {confirm: 'Are you sure?'} %>
<% end %>
