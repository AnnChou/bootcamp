<%= form_for @pet do |f| %>
  <div class="form">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="form">
    <%= f.label :species %>
    <%= f.text_field :species %>
  </div>
  <div class="form">
    <%= f.label :breed %>
    <%= f.text_field :breed %>
  </div>
  <div>
    <%= f.label :owner %>
    <%= f.select :owner_id, options_from_collection_for_select(Owner.all, 'id', 'full_name') %>
  </div>
  <div class="form_button">
    <%= f.submit %>
  </div>
<% end %>
